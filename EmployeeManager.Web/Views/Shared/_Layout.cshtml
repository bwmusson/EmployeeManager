<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CIS174 Employee Manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body>
    @using Microsoft.AspNet.Identity
    @if (Request.IsAuthenticated)
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="padding-top: 0px;">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">CIS174 Employee Manager</a>
            <div>
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a href="@Url.Action("Index", "Home")" class="navbar-brand">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="False">Employees</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a href="@Url.Action("AllEmployees", "Employee")" class="dropdown-item">View All Employees</a>
                            <a href="@Url.Action("CreateEmployee", "Employee")" class="dropdown-item">Create Employee</a>
                            <a href="@Url.Action("UpdateEmployee", "Employee")" class="dropdown-item">Update Employee</a>
                            <a href="@Url.Action("EmployeeAnniversaries", "Employee")" class="dropdown-item">Employee Anniversaries</a>
                        </div>
                    </li>
                </ul>
            </div>

            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right ml-auto" }))
            {
                
                    <ul class="nav navbar-nav">
                        <li>
                            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new {title = "Manage"})
                        </li>
                        <li class="pl-3"><a href="javascript:document.getElementById('logoutForm').submit()">Log Off</a></li>
                    </ul>
            }
        </nav>
    }
    else
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="padding-top: 0px;">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">CIS174 Employee Manager</a>
        <div>
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand">Home</a>
                </li>
            </ul>
        </div>
        <div class="navbar-right ml-auto">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    <li>@Html.ActionLink("Log In", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" , @class="pl-3"})</li>
                </ul>
            </div>
        </nav>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ben Musson</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
